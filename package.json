{
	"name": "popover-widget",
	"version": "1.0.0",
	"private": true,
	"description": "Pure JS Popover widget bundled with Webpack, with tests and GitHub Pages deploy",
	"scripts": {
		"start": "webpack serve --mode development --open --hot",
		"build": "webpack --mode production",
		"test": "jest"
	},
	"jest": {
		"testEnvironment": "jsdom",
		"transform": {
			"^.+\\.js$": "babel-jest"
		},
		"moduleNameMapper": {
			"\\.(css)$": "identity-obj-proxy"
		},
		"setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
	},
	"devDependencies": {
		"@babel/core": "^7.25.0",
		"@babel/preset-env": "^7.25.4",
		"babel-jest": "^29.7.0",
		"babel-loader": "^9.1.3",
		"css-loader": "^7.1.2",
		"html-webpack-plugin": "^5.6.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"style-loader": "^4.0.0",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.0.4"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not op_mini all"
	]
}